{
  "name": "mass-require",
  "version": "1.0.0",
  "description": "A NodeJS library to require all files in a folder (and its subfolders) in object or array format",
  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter lcov ava --verbose **/*.test.js",
    "lint": "eslint ./"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "packages/*/test/**",
      "test/**",
      "build/**",
      "test{,-*}.js",
      "**/*{.,-}test.js",
      "**/__tests__/**",
      "**/node_modules/**",
      "**/babel.config.js"
    ]
  },
  "files": [
    "lib/",
    "!**/*.test.js"
  ],
  "devDependencies": {
    "ava": "^1.1.0",
    "eslint": "^8.21.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "nyc": "^15.1.0"
  },
  "author": "exoRift",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exoRift/mass-require/issues"
  },
  "homepage": "https://github.com/exoRift/mass-require#readme",
  "engines": {
    "node": ">= 10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exoRift/mass-require.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "require",
    "import",
    "mass-import",
    "js",
    "javascript"
  ]
}
